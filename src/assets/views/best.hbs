<div class="container best-table">
    <div class="row">
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th>Adı Soyadı</th>
                    <th>Puanı</th>
                </tr>
            </thead>
            <tbody>
                {{#each data}}
                                <tr>
                    <td>
                        <div class="d-flex align-items-center">
                            <img src="https://mdbootstrap.com/img/new/avatars/8.jpg" alt=""
                                style="width: 45px; height: 45px" class="rounded-circle" />
                            <div class="ms-3">
                                <p class="fw-bold mb-1"> {{this.user.name}} {{this.user.surname}} </p>
                            </div>
                        </div>
                    </td>
                    <td>
                        <p class="fw-normal mb-1"> {{this.score}} </p>
                    </td>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>